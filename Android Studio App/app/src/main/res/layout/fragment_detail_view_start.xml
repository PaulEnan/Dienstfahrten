<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/addTabFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@color/colorAccent" />

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Titel (Reise)"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextPrename"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:inputType="textPersonName"
        android:hint="Vorname (Reisender)" />

    <EditText
        android:id="@+id/editTextSurname"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="110dp"
        android:inputType="textPersonName"
        android:hint="Nachname (Reisender)" />

    <EditText
        android:id="@+id/editTextStartDate"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:inputType="datetime"
        android:hint="Startdatum (z.B. 13.01.2019 15:00" />

    <EditText
        android:id="@+id/editTextPostalCode"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="210dp"
        android:inputType="textPostalAddress"
        android:hint="Postleitzahl (Startpunkt)" />

    <EditText
        android:id="@+id/editTextCity"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="260dp"
        android:inputType="textAutoComplete|textPostalAddress"
        android:hint="Ort (Startpunkt)" />

    <EditText
        android:id="@+id/editTextStreet"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="310dp"
        android:inputType="textAutoComplete|textPostalAddress"
        android:hint="StraÃŸe (Startpunkt)" />

    <EditText
        android:id="@+id/editTextHouseNo"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:inputType="textPostalAddress|number|numberSigned"
        android:hint="Hausnummer (Startpunkt)" />


</RelativeLayout>